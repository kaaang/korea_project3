<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정비수정n삭제"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- 정비 항목 -->
    <EditText
        android:id="@+id/detail_maintenance_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="정비 항목"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <!-- 정비 일자 -->
    <EditText
        android:id="@+id/detail_maintenance_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="정비 일자"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_maintenance_list"/>
    <!-- 정비소 -->
    <EditText
        android:id="@+id/detail_maintenance_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="정비소"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_maintenance_date"/>
    <!-- 정비 내역 -->
    <EditText
        android:id="@+id/detail_maintenance_detail"
        android:inputType="textMultiLine"
        android:lines="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="정비 내역"
        android:layout_margin="10dp"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/detail_maintenance_location"/>
    <!-- 버튼 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="49dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_maintenance_edit"
            android:onClick="maintenance_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="수정" />

        <Button
            android:id="@+id/btn_maintenance_delete"
            android:onClick="maintenance_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="삭제" />

        <Button
            android:id="@+id/btn_maintenance_list"
            android:onClick="maintenace_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="목록" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>